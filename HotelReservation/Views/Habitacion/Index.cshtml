@model IEnumerable<HotelReservation.Models.Habitacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Habitaciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    <img src="@("~/imagenes/"+item.Imagen)" asp-append-version="true" width="50px" height="50px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipo.Nombre)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="container py-5">
    <!-- For Demo Purpose-->
    <header class="text-center mb-5">
        <h1 class="display-4 font-weight-bold">Habitaciones</h1>
        <p class="font-italic text-muted mb-0">¡Descubre el lugar perfecto para tu próxima escapada! Nuestras habitaciones están diseñadas para ofrecerte el máximo confort y comodidad. Con una amplia variedad de tipos de habitaciones y comodidades, encontrarás la opción perfecta para ti. ¡Reserva ahora y disfruta de una experiencia inolvidable!</p>
        <p class="font-italic text-muted">
            Proyecto Final <a href="#" class="text-muted">
                <u>UPDS</u>
            </a>
        </p>
    </header>


    <!-- First Row [Prosucts]-->
    <h2 class="font-weight-bold mb-2">Habitaciones Disponibles</h2>
    <p class="font-italic text-muted mb-4">¡Encuentra tu habitación ideal y disfruta de una experiencia inolvidable! Reserva ahora y descubre todo lo que tenemos para ofrecerte.</p>

    <div class="row pb-5 mb-4">
        @{
            foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                    <!-- Card-->
                    <div class="card rounded shadow-sm border-0">
                        <div class="card-body p-4">
                            <img src="@("~/imagenes/"+item.Imagen)" asp-append-version="true" alt="" class="img-fluid d-block mx-auto mb-3 w-100" style="object-fit: cover; height: 200px;" />
                            <h5> <a href="#" class="text-dark">@Html.DisplayFor(modelItem => item.Codigo)</a></h5>
                            <p class="small text-muted font-italic d-inline-block text-truncate" style="max-width: 200px;">@Html.DisplayFor(modelItem => item.tipo.Descripcion)</p>
                            <ul class="list-inline small">
                                @{
                                    int a = item.Calificacion;
                                    int b = 5 - item.Calificacion;
                                    for (int i = 1; i <= a; i++)
                                    {
                                        <li class="list-inline-item m-0"><i class="bi bi-star-fill text-warning"></i></li>
                                    }
                                    for (int i = 1; i <= b; i++)
                                    {
                                        <li class="list-inline-item m-0"><i class="bi bi-star text-warning"></i></li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
